<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EEEEEE"
    android:layoutDirection="rtl"
    android:orientation="vertical"
    tools:context=".Activities.SettingsActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:layoutDirection="rtl"
        android:orientation="vertical">

        <TextView
            android:id="@+id/sittings_change_account_user_name"
            style="@style/AccountSittingsTextStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="تغيير اسم المستخدم" />

        <TextView
            android:id="@+id/sittings_change_account_user_phone"
            style="@style/AccountSittingsTextStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="تغيير رقم الهاتف" />

        <TextView
            android:id="@+id/sittings_change_store_name"
            style="@style/AccountSittingsTextStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="تغيير اسم المحل" />

    </LinearLayout>

</LinearLayout>